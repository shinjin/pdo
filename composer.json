{
    "name": "shinjin/pdo",
    "description": "A PDO wrapper, because the internet needed another PDO wrapper",
    "keywords": ["pdo", "pdo wrapper"],
    "homepage": "http://github.com/shinjin/pdo",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Rick Shin"
        }
    ],
    "require": {
        "php": "^5.6 || ^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.0",
        "phpunit/dbunit": "^2.0",
        "php-coveralls/php-coveralls": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Shinjin\\Pdo\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Shinjin\\Pdo\\Tests\\": "tests/"
        }
    },
    "config": {
        "platform": {
            "php": "5.6"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit"
    }
}
